<Application x:Class="FirstAppFokina.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FirstAppFokina"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        
        <Style TargetType="Button" x:Key="StyleBtn">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="#B6B2CA"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#3A2D3A"/>
        </Style>

        <Style TargetType="Button" x:Key="txbStyle">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Width" Value="220"/>
            <Setter Property="FontSize" Value="25"/>
            <Setter Property="FontFamily" Value="Century Gothic"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#3A2D3A"/>
        </Style>

    </Application.Resources>
</Application>
