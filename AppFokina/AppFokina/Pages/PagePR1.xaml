<Page x:Class="AppFokina.Pages.PagePR1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AppFokina.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="PagePR1">

    <Grid>

        <Border CornerRadius="9" BorderThickness="8"
                Background="#D7C7D7" BorderBrush="#3A2D3A">

            <StackPanel>

                <StackPanel Orientation="Vertical">

                    <StackPanel Orientation="Horizontal">

                        <Button x:Name="next1" 
                    Content="&#707;&#707;" Width="33" Height="33"
                    FontSize="13" Margin="20, 5, 20, 5"
                    Style="{StaticResource StyleBtn}" 
                    Click="next1_Click"/>

                        <TextBlock Text="Практическая работа №1" FontSize="25"
                           FontFamily="Century Gothic" Margin="10"/>

                    </StackPanel>

                    <Separator Background="#3A2D3A"></Separator>

                </StackPanel>

                <StackPanel Orientation="Vertical" Margin="50" Height="369">

                    <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="4" Width="277">

                        <TextBlock Text="Введите значение X:" 
                                Margin="4, 10, 10, 0" FontFamily="Century Gothic"/>

                        <TextBox x:Name="meanX"
                                Height="20" Width="130" Margin="10"
                                FontSize="13" FontFamily="Century Gothic"
                                BorderThickness="2"
                                BorderBrush="#3A2D3A"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="4" Width="277">

                        <TextBlock Text="Введите значение Y:"
                        Margin="4, 10, 10, 0" FontFamily="Century Gothic"/>

                        <TextBox x:Name="meanY"
                        Height="20" Width="130" Margin="10"
                        FontSize="13" FontFamily="Century Gothic"
                        BorderThickness="2"
                        BorderBrush="#3A2D3A"/>

                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="4" Width="277">

                        <TextBlock Text="Введите значение Z:"
                        Margin="4, 10, 10, 0" FontFamily="Century Gothic" Width="121"/>

                        <TextBox x:Name="meanZ"
                         Height="20" Margin="10" Width="130"
                         FontSize="13" FontFamily="Century Gothic"
                         BorderThickness="2"
                         BorderBrush="#3A2D3A"/>

                    </StackPanel>



                    <StackPanel Width="268" Height="174">

                        <TextBlock Text="Результат"  
                        FontFamily="Century Gothic" 
                        Background="#D7C7D7"
                        Margin="0, 0, 0, 5"/>

                        <ListBox Name="LstResult" Height="150" Width="270"/>

                    </StackPanel>



                    <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Width="200" Height="55">

                        <Button x:Name="Perfom"
                        Height="25" Width="80"
                        Content="Выполнить"
                        Margin="10" FontSize="13"
                        Style="{StaticResource StyleBtn}" 
                        Click="Perfom_Click"/>

                        <Button x:Name="clear1" 
                        Style="{StaticResource StyleBtn}" 
                        FontSize="13" Height="25" Width="80"
                        Margin="10"
                        Content="Очистить" 
                        Click="clear1_Click"/>
                    </StackPanel>

                </StackPanel>
            </StackPanel>

        </Border>
    </Grid>
</Page>
